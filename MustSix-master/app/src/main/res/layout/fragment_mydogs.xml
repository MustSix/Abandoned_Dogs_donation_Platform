<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="180dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/clay_icon"></ImageView>
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_marginLeft="10dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:layout_marginTop="45dp">

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="52dp"
                            android:text="Clay"
                            android:textSize="25dp"
                            android:textStyle="bold"
                            android:textAlignment="center"></TextView>

                        <TextView
                            android:layout_width="75dp"
                            android:layout_height="36dp"
                            android:text="with Justin"
                            android:textSize="15dp"></TextView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:text="02-1090-1090 \n 연락주세요"
                        android:textAlignment="center"></TextView>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="150dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/bd_mappointer"></ImageView>

                <TextView
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:text="남양주"></TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivision"
        android:orientation="horizontal"
        android:layout_below="@+id/profile"></LinearLayout>

    <LinearLayout
        android:id="@+id/profilepage_info"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="게시물"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="bottom"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="101"
                android:textStyle="bold"
                android:textAlignment="center"></TextView>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="팔로워"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="bottom"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="1,399"
                android:textStyle="bold"
                android:textAlignment="center"></TextView>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="팔로잉"
                android:textStyle="bold"
                android:textAlignment="center"
                android:gravity="bottom"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="109"
                android:textStyle="bold"
                android:textAlignment="center"></TextView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivision"
        android:orientation="horizontal"
        android:layout_below="@+id/profilepage_info"></LinearLayout>

</LinearLayout>